<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <% if @new_book.errors.any? %>
        <h3><%= @new_book.errors.count %>
          errors prohibited this book from being saved:</h3>
            <ul>
          <% @new_book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
           </ul>
        <% end %>
        <h1>Editing Book</h1>
        <%= form_with model: @new_book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, class: "form-control bool_title" %><br>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, class: "form-control bool_body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <% end %>

        <%= link_to 'Show', book_path(@new_book.id) %>
        |
        <a href="/books">Back</a>
      </div>
    </div>
  </div>
</main>